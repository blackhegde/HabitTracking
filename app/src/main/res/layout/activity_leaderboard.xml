<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/design_default_color_secondary_variant"
        android:padding="8dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnhome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/home"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:contentDescription="Home Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="LEADERBOARD"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- RecyclerView hiển thị danh sách người đã chạy -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_runners"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <!-- Thanh ngang dưới cùng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/design_default_color_on_primary"
        android:gravity="center">

        <!-- Icon Bảng xếp hạng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Leaderboard Icon"
                android:src="@drawable/rank" />

        </LinearLayout>

        <!-- Nút Start -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:textSize="26dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Icon Thông tin cá nhân -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rank"
                android:contentDescription="Personal Info Icon" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>